<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_8"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/qb_px_14"
    android:paddingLeft="@dimen/qb_px_20"
    android:paddingRight="@dimen/qb_px_20"
    android:paddingTop="@dimen/qb_px_18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名：" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:text="朱瑞" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别：" />

        <TextView
            android:id="@+id/tv_sex"
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:text="男" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄：" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="60岁" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与户主关系：" />

            <TextView
                android:id="@+id/tv_relationship"
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本人" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_chat"
            android:layout_width="@dimen/qb_px_80"
            android:layout_height="@dimen/qb_px_26"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/qb_px_12"
            android:background="@drawable/icon_sign_addedit"
            android:gravity="center"
            android:text="发起聊天"
            android:textColor="#26B2CB"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>
