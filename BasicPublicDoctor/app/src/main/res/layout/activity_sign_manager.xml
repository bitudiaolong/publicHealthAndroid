<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_bg_color"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/app_toolBar"></View>

    <include
        android:id="@+id/title"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/qb_px_20"
        android:paddingRight="@dimen/qb_px_20">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_38"
            android:background="@drawable/bg_sign_manager_search"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_label"
                android:layout_width="@dimen/qb_px_24"
                android:layout_height="@dimen/qb_px_24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/qb_px_30"
                android:scaleType="centerInside"
                android:src="@drawable/icon_sign_manager_search" />

            <EditText
                android:id="@+id/et_search"
                style="@style/style_tv_ffffff_15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/qb_px_6"
                android:layout_toRightOf="@id/iv_label"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入身份证/手机号/姓名"
                android:imeOptions="actionSearch"
                android:lines="1"
                android:singleLine="true"
                android:textColorHint="@color/white"
                android:textSize="15sp" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_46"
        android:background="@color/white"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/black_040404"
        app:tabTextAppearance="@style/tab_appearance"
        app:tabTextColor="@color/gray_787878" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>