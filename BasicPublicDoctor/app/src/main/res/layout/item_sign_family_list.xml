<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_8"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/qb_px_20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭编号：" />

        <TextView
            android:id="@+id/tv_house_id"
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2323232321" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="户主：" />

        <TextView
            android:id="@+id/tv_house_name"
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭成员：" />

        <TextView
            android:id="@+id/tv_family_members"
            style="@style/style_tv_333333_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三丰，张无忌，赵敏张三丰，张无忌，赵敏张三丰，张无忌，赵敏" />
    </LinearLayout>
</LinearLayout>
