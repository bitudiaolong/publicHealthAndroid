<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login"
    android:orientation="vertical">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/app_toolBar"></View>

    <include
        android:id="@+id/title"
        layout="@layout/title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_120"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/qb_px_18"
                    android:layout_height="@dimen/qb_px_21"
                    android:background="@drawable/icon_login_accout" />

                <EditText
                    android:id="@+id/edt_account"
                    style="@style/style_tv_ffffff_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_12"
                    android:background="@null"
                    android:hint="请输入账号"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="#f6f5f5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_60"
            android:layout_marginRight="@dimen/qb_px_60"
            android:layout_marginTop="@dimen/qb_px_30"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/qb_px_18"
                    android:layout_height="@dimen/qb_px_21"
                    android:background="@drawable/icon_login_pwd" />

                <EditText
                    android:id="@+id/edt_password"
                    style="@style/style_tv_ffffff_18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/qb_px_12"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColorHint="@color/white" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="@dimen/qb_px_10"
                android:background="#f6f5f5" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/qb_px_16">

            <TextView
                android:id="@+id/tv_forget_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/qb_px_60"
                android:text="忘记密码"
                android:textColor="#ffc106"
                android:textSize="15sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/qb_px_50"
            android:layout_marginRight="@dimen/qb_px_50"
            android:layout_marginTop="@dimen/qb_px_50"
            android:background="@drawable/bg_btn_login"
            android:text="登    录"
            android:textColor="#35c5d3"
            android:textSize="21sp" />
    </LinearLayout>
</LinearLayout>
