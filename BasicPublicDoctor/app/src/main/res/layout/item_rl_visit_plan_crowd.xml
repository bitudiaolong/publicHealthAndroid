<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/qb_px_8"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/qb_px_18"
    android:paddingLeft="@dimen/qb_px_20"
    android:paddingRight="@dimen/qb_px_20"
    android:paddingTop="@dimen/qb_px_18">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            style="@style/style_tv_464646_16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三" />

        <LinearLayout
            android:id="@+id/ll_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别：" />

            <TextView
                android:id="@+id/tv_sex"
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:text="男" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄：" />

            <TextView
                android:id="@+id/tv_age"
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60岁" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机：" />

            <TextView
                android:id="@+id/tv_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:text="13000000000"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_classicfication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人群分类：" />

            <TextView
                android:id="@+id/tv_classicfication"
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址：" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/style_tv_464646_16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text=" " />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_chat"
        android:layout_width="@dimen/qb_px_80"
        android:layout_height="@dimen/qb_px_24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/qb_px_12"
        android:background="@drawable/icon_sign_addedit"
        android:gravity="center"
        android:text="发起聊天"
        android:textColor="#26B2CB"
        android:textSize="16sp"
        android:visibility="gone" />
</RelativeLayout>
