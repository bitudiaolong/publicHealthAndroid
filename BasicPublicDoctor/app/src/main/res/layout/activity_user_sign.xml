<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserSignActivity">


    <com.gc.basicpublicdoctor.widget.SignView
        android:id="@+id/sign_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/txt_sign_back"
        android:layout_width="@dimen/qb_px_50"
        android:layout_height="@dimen/qb_px_50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/qb_px_10"
        android:layout_marginTop="@dimen/qb_px_10"
        android:gravity="center">

        <TextView
            android:layout_width="@dimen/qb_px_14"
            android:layout_height="@dimen/qb_px_24"
            android:background="@drawable/usersign_return"
            android:padding="@dimen/qb_px_20" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/qb_px_24"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_undo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/usersign_backout"
            android:drawablePadding="@dimen/qb_px_10"
            android:text="撤销"
            android:textColor="#38BED7"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_26"
            android:drawableLeft="@drawable/usersign_delete"
            android:drawablePadding="@dimen/qb_px_10"
            android:text="清除"
            android:textColor="#38BED7"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_sign_confim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/qb_px_26"
            android:background="@drawable/bg_usersign_confirm"
            android:paddingHorizontal="@dimen/qb_px_16"
            android:paddingVertical="@dimen/qb_px_6"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="17sp" />


    </LinearLayout>


</RelativeLayout>