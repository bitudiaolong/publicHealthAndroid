<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_default_bg_color"
    android:orientation="vertical"
    tools:context=".activity.VisitPlanActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/app_toolBar"></View>

    <include
        android:id="@+id/title"
        layout="@layout/title_bar" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_default_bg_color"
        app:srlEnableLoadMore="false"
        app:srlEnableRefresh="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qb_px_7"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/qb_px_27"
                            android:layout_height="@dimen/qb_px_27"
                            android:layout_marginLeft="@dimen/qb_px_19"
                            android:src="@drawable/icon_me_signplan_firstsign" />

                        <TextView
                            style="@style/style_tv_333333_16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/qb_px_12"
                            android:text="首次随访未进行" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num_1"
                        style="@style/style_tv_333333_16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/qb_px_8"
                        android:layout_height="@dimen/qb_px_17"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_marginRight="@dimen/qb_px_19"
                        android:background="@drawable/icon_me_right_arrow" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/qb_px_19"
                    android:layout_marginRight="@dimen/qb_px_19"
                    android:background="@color/app_default_bg_color" />

                <LinearLayout
                    android:id="@+id/ll_line_2"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/qb_px_27"
                            android:layout_height="@dimen/qb_px_27"
                            android:layout_marginLeft="@dimen/qb_px_19"
                            android:src="@drawable/icon_me_signplan_today" />

                        <TextView
                            style="@style/style_tv_333333_16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/qb_px_12"
                            android:text="本日应随访" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num_2"
                        style="@style/style_tv_333333_16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/qb_px_8"
                        android:layout_height="@dimen/qb_px_17"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_marginRight="@dimen/qb_px_19"
                        android:background="@drawable/icon_me_right_arrow" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/qb_px_19"
                    android:layout_marginRight="@dimen/qb_px_19"
                    android:background="@color/app_default_bg_color" />

                <LinearLayout
                    android:id="@+id/ll_line_3"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/qb_px_27"
                            android:layout_height="@dimen/qb_px_27"
                            android:layout_marginLeft="@dimen/qb_px_19"
                            android:src="@drawable/icon_me_signplan_thisweek" />

                        <TextView
                            style="@style/style_tv_333333_16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/qb_px_12"
                            android:text="本周应随访" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num_3"
                        style="@style/style_tv_333333_16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/qb_px_8"
                        android:layout_height="@dimen/qb_px_17"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_marginRight="@dimen/qb_px_19"
                        android:background="@drawable/icon_me_right_arrow" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="@dimen/qb_px_19"
                    android:layout_marginRight="@dimen/qb_px_19"
                    android:background="@color/app_default_bg_color" />

                <LinearLayout
                    android:id="@+id/ll_line_4"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/qb_px_27"
                            android:layout_height="@dimen/qb_px_27"
                            android:layout_marginLeft="@dimen/qb_px_19"
                            android:src="@drawable/icon_me_signplan_overtime" />

                        <TextView
                            style="@style/style_tv_333333_16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/qb_px_12"
                            android:text="逾期随访" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_num_4"
                        style="@style/style_tv_333333_16sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <ImageView
                        android:layout_width="@dimen/qb_px_8"
                        android:layout_height="@dimen/qb_px_17"
                        android:layout_marginLeft="@dimen/qb_px_4"
                        android:layout_marginRight="@dimen/qb_px_19"
                        android:background="@drawable/icon_me_right_arrow" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>
