<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="基本居民信息"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_str"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txt_title"
        android:text="*"
        android:textColor="#F41C26" />


    <TextView
        android:id="@+id/txt_total_price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txt_str"
        android:text="：总价："
        android:textColor="#333333"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/txt_total_price_title"
        android:text="22222"
        android:textColor="#FF0500"
        android:textSize="16sp"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/qb_px_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_read"
            android:layout_width="@dimen/qb_px_70"
            android:layout_height="@dimen/qb_px_26"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qb_px_6"
            android:background="@drawable/icon_sign_addedit"
            android:gravity="center"
            android:text="查看详情"
            android:textColor="#26B2CB"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_add"
            android:layout_width="@dimen/qb_px_60"
            android:layout_height="@dimen/qb_px_26"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_sign_addedit"
            android:gravity="center"
            android:text="添加"
            android:textColor="#26B2CB"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>