<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/parallax"
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_600"
        android:layout_marginTop="-300dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_home_title_bg1"
        app:layout_collapseMode="parallax" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:srlEnableLoadMore="false">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:id="@+id/classics_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlAccentColor="@color/white" />

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/sv_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/qb_px_150"
                        android:background="#f3f3f3"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:id="@+id/view_header"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></View>

                            <LinearLayout
                                android:id="@+id/lin_header"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/qb_px_106"
                                android:layout_marginLeft="@dimen/qb_px_16"
                                android:layout_marginRight="@dimen/qb_px_16"
                                android:background="@drawable/bg_home_wihte_radius"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_sign"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/qb_px_46"
                                        android:layout_height="@dimen/qb_px_40"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/icon_home_sign" />

                                    <TextView
                                        style="@style/style_tv_000000_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/qb_px_6"
                                        android:text="签约管理" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_examine"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/qb_px_37"
                                        android:layout_height="@dimen/qb_px_40"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/icon_home_examine" />

                                    <TextView
                                        style="@style/style_tv_000000_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/qb_px_6"
                                        android:text="签约审核" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_visit"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="@dimen/qb_px_33"
                                        android:layout_height="@dimen/qb_px_40"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@drawable/icon_home_visit" />

                                    <TextView
                                        style="@style/style_tv_000000_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="@dimen/qb_px_6"
                                        android:text="随访计划" />
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/qb_px_12"
                            android:layout_marginRight="@dimen/qb_px_12"
                            android:layout_marginTop="@dimen/qb_px_12"
                            android:background="#f3f3f3"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_new_sign"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/qb_px_90"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_home_new_signing"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/qb_px_20">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_new_sign_num"
                                            style="@style/style_tv_ffffff_22sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="" />

                                        <TextView
                                            style="@style/style_tv_ffffff_15sp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/qb_px_4"
                                            android:text="日新增签约数" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_cumulative"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/qb_px_90"
                                    android:layout_marginLeft="@dimen/qb_px_12"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_home_cumulative"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/qb_px_20">

                                    <TextView
                                        android:id="@+id/tv_cumulative_num"
                                        style="@style/style_tv_ffffff_22sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                                    <TextView
                                        style="@style/style_tv_ffffff_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/qb_px_4"
                                        android:text="累计签约总数" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/qb_px_12"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_overdue"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/qb_px_90"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_home_overdue"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/qb_px_20">

                                    <TextView
                                        android:id="@+id/tv_overdue_num"
                                        style="@style/style_tv_ffffff_22sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                                    <TextView
                                        style="@style/style_tv_ffffff_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/qb_px_4"
                                        android:text="签约逾期总数" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/ll_audits"
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/qb_px_90"
                                    android:layout_marginLeft="@dimen/qb_px_12"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_home_audits"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical"
                                    android:paddingLeft="@dimen/qb_px_20">

                                    <TextView
                                        android:id="@+id/tv_audits_num"
                                        style="@style/style_tv_ffffff_22sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="" />

                                    <TextView
                                        style="@style/style_tv_ffffff_15sp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/qb_px_4"
                                        android:text="签约待审核数" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/qb_px_14"
                            android:background="@color/white"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:id="@+id/rl_news_reconmmand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:paddingBottom="@dimen/qb_px_10"
                                android:paddingTop="@dimen/qb_px_10">

                                <TextView
                                    android:id="@+id/tv_bg"
                                    android:layout_width="@dimen/qb_px_5"
                                    android:layout_height="@dimen/qb_px_17"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/qb_px_14"
                                    android:background="@color/colorPrimary" />

                                <TextView
                                    style="@style/style_tv_black_010101_15sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/qb_px_4"
                                    android:layout_toRightOf="@+id/tv_bg"
                                    android:text="卫计专线" />

                                <ImageView
                                    android:id="@+id/iv_bg"
                                    android:layout_width="@dimen/qb_px_7"
                                    android:layout_height="@dimen/qb_px_13"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/qb_px_14"
                                    android:background="@drawable/icon_home_right_arrow" />

                                <TextView
                                    style="@style/style_tv_gray_969696_14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="@dimen/qb_px_4"
                                    android:layout_toLeftOf="@+id/iv_bg"
                                    android:text="更多" />
                            </RelativeLayout>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rcy_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-2dp"
                                android:background="@color/app_default_bg_color"></android.support.v7.widget.RecyclerView>

                            <TextView
                                android:id="@+id/txt_nodata"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="@dimen/qb_px_40" />
                        </LinearLayout>

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <LinearLayout
        android:id="@+id/ll_change_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height" />

        <LinearLayout
            android:id="@+id/ll_title_height"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center">

            <TextView
                style="@style/style_white_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="渐健家医" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
